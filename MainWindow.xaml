<Window x:Class="Labb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Labb3.Views"
        xmlns:vm="clr-namespace:Labb3.ViewModels"
        Title="Quiz Configurator" 
        Height="750" 
        Width="1000"
        MinHeight="750"
        MinWidth="900">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ConfigurationViewModel}">
            <views:ConfigurationView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PlayerViewModel}">
            <views:PlayerView/>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <!-- Top menu -->
        <views:MenuView DockPanel.Dock="Top"/>

        <!-- Main content: ConfigurationView or PlayerView -->
        <ContentControl Content="{Binding CurrentView}"/>
    </DockPanel>
</Window>