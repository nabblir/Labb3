<UserControl x:Class="Labb3.Views.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,20,0,0">
        <!-- Main layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- DockPanel for questions -->
        <DockPanel 
         Name="questionsPanel"
         Grid.Row="0" Margin="10,56,490,10" 
         Grid.RowSpan="2"
         Background="Blue">
        </DockPanel>

        <Grid Grid.Row="1" Background="LightGray" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Question Boxes and text -->
            <TextBox 
                Name="questionTextBox" 
                TextWrapping="Wrap"
                Margin="400,54,114,331"
                Text="The quick brown fox jumps over the lazy dog.">
            </TextBox>
            <TextBox 
                Name="rightAnswerTextBox" 
                TextWrapping="Wrap"
                Margin="400,164,114,264"
                Text="The quick brown fox jumps over the lazy dog.">
            </TextBox>
            <TextBox 
                Name="wrongAnswer1TextBox" 
                TextWrapping="Wrap"
                Margin="400,209,114,219"
                Text="The quick brown fox jumps over the lazy dog.">
            </TextBox>
            <TextBox 
                Name="wrongAnswer2TextBox" 
                TextWrapping="Wrap"
                Margin="400,254,114,174"
                Text="The quick brown fox jumps over the lazy dog.">
            </TextBox>
            <TextBox 
                Name="wrongAnswer3TextBox" 
                TextWrapping="Wrap"
                Margin="400,299,114,129"
                Text="The quick brown fox jumps over the lazy dog.">
            </TextBox>
            <Label 
                Content="Question:" 
                Margin="400,28,326,396"/>
            <Label 
                Content="Right Answer:" 
                Margin="400,138,269,286"/>
            <Label 
                Content="Wrong Answer 1:" 
                Margin="400,183,269,241"/>
            <Label 
                Content="Wrong Answer 2:" 
                Margin="400,228,269,196"/>
            <Label 
                Content="Wrong Answer 3:" 
                Margin="400,273,269,151"/>

        </Grid>
    </Grid>
</UserControl>
