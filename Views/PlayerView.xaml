<UserControl x:Class="Labb3.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <!-- Main layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- DockPanel for questions -->
            <DockPanel 
     Name="questionsPanel"
     Grid.Row="0" Margin="10,56,490,10" 
     Grid.RowSpan="2"
     Background="Blue">
            </DockPanel>

            <Grid Grid.Row="1" Background="LightGray" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Question Boxes and text -->
                <TextBox 
            Name="questionTextBox" 
            TextWrapping="Wrap"
            Margin="257,41,257,344"
            Text="The quick brown fox jumps over the lazy dog." Focusable="False" AllowDrop="False"/>
                <Label 
            Content="Question:" 
            Margin="363,10,363,414"/>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
