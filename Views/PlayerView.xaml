<UserControl x:Class="Labb3.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Quiz Status and Timer -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding QuizStatus}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{Binding TimerLabel}" FontSize="16" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding TimerDisplay}" FontSize="16" FontWeight="Bold" Foreground="Red"/>
                <TextBlock Text=" seconds" FontSize="16"/>
            </StackPanel>
        </Grid>

        <!-- Question Text -->
        <TextBlock Grid.Row="1" 
                   Text="{Binding QuestionText}" 
                   FontSize="24" 
                   TextWrapping="Wrap" 
                   Margin="0,0,0,30"
                   HorizontalAlignment="Center"/>

        <!-- Answer Buttons -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0"
                    Content="{Binding Option1}"
                    Command="{Binding AnswerCommand}"
                    CommandParameter="0"
                    FontSize="18"
                    Margin="0,0,10,10"
                    Padding="20"/>

            <Button Grid.Row="0" Grid.Column="1"
                    Content="{Binding Option2}"
                    Command="{Binding AnswerCommand}"
                    CommandParameter="1"
                    FontSize="18"
                    Margin="10,0,0,10"
                    Padding="20"/>

            <Button Grid.Row="1" Grid.Column="0"
                    Content="{Binding Option3}"
                    Command="{Binding AnswerCommand}"
                    CommandParameter="2"
                    FontSize="18"
                    Margin="0,10,10,0"
                    Padding="20"/>

            <Button Grid.Row="1" Grid.Column="1"
                    Content="{Binding Option4}"
                    Command="{Binding AnswerCommand}"
                    CommandParameter="3"
                    FontSize="18"
                    Margin="10,10,0,0"
                    Padding="20"/>
        </Grid>

        <!-- Feedback and Start Button -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center">
            <TextBlock Text="{Binding FeedbackText}" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{Binding FeedbackColor}"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <Button Content="Start Quiz" 
                    Command="{Binding StartQuizCommand}"
                    FontSize="16"
                    Padding="20,10"
                    IsEnabled="{Binding FeedbackButtonVisible}"/>
        </StackPanel>
    </Grid>
</UserControl>